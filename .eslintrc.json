{
  "parserOptions": {
    "ecmaVersion": 6
  },
  "rules": {
    "quotes": [
      "error",
      "double"
    ],
    "semi": [
      "error",
      "always"
    ]
  },
  "env": {
    "browser": true
  },
  "globals": {
    "Chart": "readonly",
    "moment": "readonly"
  },
  "extends": [
    "eslint:recommended"
  ],
  "plugins": [
    "html"
  ],
  "settings": {
    "html/html-extensions": [
      ".gohtml"
    ],
    "html/report-bad-indent": "error"
  }
}
